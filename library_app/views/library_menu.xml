        <record model="ir.actions.act_window" id="action_library_book">
            <field name="name">Library Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">list,form</field>
        </record>

    <menuitem id="menu_library_book"
              name="Book"
              action="library_app.action_library_book"
              parent="library_menu" />


        <record model="ir.actions.act_window" id="action_library_categ">
            <field name="name">Categories</field>
            <field name="res_model">library.book.category</field>
            <field name="view_mode">list,form</field>
        </record>

    <menuitem id="menu_library_categ"
              name="Categories"
              action="action_library_categ"
              parent="library_menu" />


</odoo>
